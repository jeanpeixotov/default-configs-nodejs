{
  "extends": ["airbnb-base", "plugin:jest/recommended", "plugin:security/recommended", "plugin:prettier/recommended", "plugin:sonarjs/recommended"],
  "env": {
    "node": true,
    "jest/globals": true,
    "es6": true
  },
  "plugins": ["jest", "security", "sonarjs", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "consistent-return": "off",
    "no-console": "off",
    "no-continue": "off",
    "no-restricted-syntax": "off",
    "no-await-in-loop": "off",
    "no-unused-vars": ["error", { "argsIgnorePattern": "next" }],
    "indent": [
      "error",
      2
    ]
  }
}